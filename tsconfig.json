{
    "sourceMap": true,
    "compilerOptions": {
        "esModuleInterop": true,
        "target": "esnext",
        "lib": ["es5", "es6", "es2021", "dom", "dom.iterable"],
        "module": "esnext",
        "strict": true,
        "jsx": "preserve",
        "moduleResolution": "node",
        "typeRoots": [
            "resources/ts/@types",
            "node_modules/@types"
        ],
        "types": ["vite/client"],
        "baseUrl": ".",
        "paths": {
            "~/*": [
                "node_modules/*",
                "node_modules/@types/*",
            ],
            "@/*": ["resources/assets/*"],
        },
        "skipLibCheck": true
    },
    "include": ["resources/**/*.js", "resources/**/*.ts", "resources/**/*.vue"],
    "exclude": [
        "node_modules",
        "./node_modules",
        "./node_modules/*",
        "./node_modules/@types/node/index.d.ts",
    ],
    "compileOnSave": false,
    "experimentalDecorators": true
}
