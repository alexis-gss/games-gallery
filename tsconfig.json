{
    "compilerOptions": {
        "target": "esnext",
        "lib": ["es5", "es6", "dom", "dom.iterable"],
        "module": "esnext",
        "strict": true,
        "jsx": "preserve",
        "moduleResolution": "node",
        "typeRoots": ["resources/ts/@types", "node_modules/@types"]
    },
    "include": ["resources/**/*.js", "resources/**/*.ts", "resources/**/*.vue"],
    "exclude": ["node_modules"],
    "compileOnSave": false
}
