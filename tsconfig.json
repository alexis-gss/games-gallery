{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "sourceMap": true,
    "compilerOptions": {
        "lib": ["ESNEXT", "DOM", "DOM.Iterable"],
        "baseUrl": ".",
        "paths": {
            "~/*": ["node_modules/*", "node_modules/@types/*"],
            "@/*": ["resources/assets/*"]
        }
    },
    "include": ["resources/**/*.js", "resources/**/*.ts", "resources/**/*.vue"],
    "exclude": ["node_modules"]
}
