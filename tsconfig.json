{
    "sourceMap": true,
    "compilerOptions": {
        "esModuleInterop": true,
        "target": "esnext",
        "lib": ["es5", "es6", "es2021", "dom", "dom.iterable"],
        "module": "esnext",
        "strict": true,
        "jsx": "preserve",
        "moduleResolution": "node",
        "typeRoots": [
            "resources/ts/@types",
            "node_modules/@types"
        ],
        "baseUrl": ".",
        "paths": {
            "~/*": [
                "node_modules/*",
                "node_modules/@types/*",
            ],
            "@/*": ["resources/assets/*"],
        }
    },
    "include": ["resources/**/*.js", "resources/**/*.ts", "resources/**/*.vue"],
    "exclude": ["node_modules"],
    "compileOnSave": false,
    "experimentalDecorators": true
}
